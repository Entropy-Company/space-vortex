<BoxContainer xmlns="https://spacestation14.io"
    Orientation="Horizontal"
    HorizontalExpand="True"
    MinSize="0 54"
    Margin="4 2 4 2"
    StyleClasses="windowBackground Panel">
    <EntityPrototypeView
        Name="ItemPrototype"
        Access="Public"
        MinSize="32 32"
        MaxSize="32 32"
        Margin="4 0 4 0"/>
    <Label Name="NameLabel"
        Access="Public"
        SizeFlagsStretchRatio="3"
        HorizontalExpand="True"
        ClipText="True"
        Margin="0 0 4 0"/>
    <OptionButton Name="Count"
        Access="Public"
        MinSize="45 20"
        Margin="0 0 4 0"
        HorizontalAlignment="Left" />
    <Button Name="BuyButton"
        Access="Public"
        Text="{Loc 'vending-machine-ui-buy-button-text'}"
        MinSize="45 25"
        Margin="0 0 4 0"
        HorizontalAlignment="Right" />
</BoxContainer>